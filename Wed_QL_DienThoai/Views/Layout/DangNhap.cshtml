@using Wed_QL_DienThoai.Models;
@{
    ViewBag.Title = "DangNhap";
    <link href="~/Content/bootstrap/css/StyleSheet2.css" rel="stylesheet" />
}
<form action="/Layout/DangNhap" method="post">
    <div class="hero">
        <div class="form-box">
            <div class="button-box">
                <div id="layout"></div>
                <button class="btn">ĐĂNG NHẬP</button>
            </div>
            <div class="social-icon">
                <img src="~/Content/filehinh/fb.png" />
                <img src="~/Content/filehinh/gmail.png" style="margin-bottom: 4px" />
                <img src="~/Content/filehinh/zalo.png" />
            </div>
            <form class="input-group">
                <input type="text" name="txttk" class="input-field" placeholder="Tài khoản" required />
                <input type="password" name="txtmk" class="input-field" placeholder="Mật khẩu" required />
                <button type="submit" class="submit-btn">Đăng nhập</button>
                <span class="link">@Html.ActionLink("Đăng ký ngay", "Dangky", "Layout", new { @class = "a" })</span>
            </form>
        </div>
    </div>
</form>


